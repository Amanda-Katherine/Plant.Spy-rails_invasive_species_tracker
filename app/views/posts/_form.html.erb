<%= form_for(@post) do |f| %>
    <%= f.label "Create new post" %>
    <% if !@invasive_species %>
        <%= f.fields_for :invasive_species do |i| %>
            <br><%= i.label :common_name %>
            <%= i.text_field :common_name %>
        <% end %>
    <% else %>
        <%= f.label " for: "%>
        <%= f.label(:common_name, "#{@invasive_species.common_name}") %>
        <%= f.hidden_field :common_name, value: @invasive_species.common_name %>
    <% end %><br>
        
    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :location_latitude %>
    <%= f.text_field :location_latitude %><br>
    
    <%= f.label :location_longitude %>
    <%= f.text_field :location_longitude %><br>

    <%= f.label :photo %>
    <%= f.text_field :photo %><br>

    <%= f.submit %>
<% end %>